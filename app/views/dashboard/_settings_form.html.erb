
<%= simple_form_for @settings, url: root_path do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <% 
        log_ages = {
          "Não guardar logs" => 1.minute.to_i,
          "1 semana"  => 1.week.to_i, 
          "2 semanas" => 2.weeks.to_i, 
          "1 mês"     => 1.month.to_i, 
          "3 meses"   => 3.months.to_i, 
          "6 meses"   => 6.months.to_i, 
          "1 ano"     => 1.year.to_i, 
          "2 anos"    => 2.years.to_i, 
          "5 anos"    => 5.years.to_i, 
          "10 anos"   => 10.years.to_i
        } 
      %>
      <div class="row">
        <div class="col"><%= f.input :max_log_age, label: "Tempo máximo de histórico", as: :select, collection: log_ages, include_blank: false %></div>
        <div class="col"><%= f.input :n_pings, label: "Número de pings por medição", as: :integer, input_html: {min: 1, max: 30} %></div>
      </div>
      <div class="row">
        <div class="col"><%= f.input :user_login, label: "Nome de usuário de acesso" %></div>
        <div class="col"><%= f.input :user_passwd, label: "Senha de acesso ao painel" %></div>
      </div>
      <div class="row">
        <div class="col"><%= f.input :notification_email, label: "Email para notificações" %></div>
        <div class="col"><%= f.input :group_services, label: "Agrupar serviços?", as: :select, collection: {"Sim" => true, "Não" => false}, include_blank: false %></div>
      </div>
      
      <div class="row">
        <div class="col"><%= f.input :send_email_notifications, label: "Notificar eventos por email?", as: :select, collection: {"Sim" => true, "Não" => false}, include_blank: false %></div>
        <div class="col"><%= f.input :send_telegram_notifications, label: "Notificar eventos por telegram?", as: :select, collection: {"Sim" => true, "Não" => false}, include_blank: false %></div>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit "Salvar", class: "btn btn-primary btn-block" %>
    </div>
<% end %>