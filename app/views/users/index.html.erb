
<% @users = @users.page(params[:page]).per(10) %>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="row">Nome</th>
        <th scope="row">Nome de usuário</th>
        <th scope="row">Endereço de e-mail</th>
        <th scope="row"></th>
        <th scope="row"><%= link_to fa_icon("plus-circle"), new_user_path, class: "btn btn-primary" %></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr scope="col">
          <td><%= user.name %></td>
          <td><%= user.login %></td>
          <td><%= user.email %></td>
          <td><%= link_to fa_icon("pencil-alt"), edit_user_path(user), class: "btn btn-warning" %></td>
          <td><%= link_to fa_icon(:trash), user, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      <tr><td colspan=5>
        <div class="row">
          <div class="col text-center text-sm text-muted"><%= page_entries_info @users %></div>
          <div class="col-auto"><%= paginate @users %></div>
        </div>
      </td></tr>
    </tbody>
  </table>
</div>

