
<div class="card w-25 mt-5 p-3 mx-auto login-card" style="">
  <img class="card-img-top" src="<%= asset_path :selo_casebras %>" alt="">
  <div class="card-body">
    <h4 class="card-title text-center">Sistema de monitoramento CaseBrás</h4>
    <h5 class="card-subtitle text-center text-muted">Tela de login</h5>
    <div class="login-form mt-3">
      <%= simple_form_for :login do |f| %>
        <div class="form-inputs">
          <%= f.input :login, label: "Nome de usuário" %>
          <%= f.input :password, label: "Senha" %>
        </div>
      
        <div class="form-actions">
          <%= f.button :submit, "Entrar", class: "btn btn-block btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


